{
  "name": "protonmail-desktop",
  "productName": "Protonmail Desktop",
  "description": "Unofficial electron wrapper for protonmail",
  "version": "0.3.0",
  "author": {
    "name": "Matthew Core <matcore@protonmail.com>",
    "email": "matcore@protonmail.com"
  },
  "copyright": "Â© 2016, M. Core <BeatPlus>.",
  "homepage": "http://beatplus.github.io/Protonmail/",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.beatplus.pronmail-desktop",
    "iconUrl": "https://raw.githubusercontent.com/BeatPlus/Protonmail/master/build/Icon.ico",
    "linux": {
      "target": "deb"
    },
    "files": [
      "app/**/*",
      "app/static/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "electron-config": "^0.2.1",
    "electron-context-menu": "^0.8.0",
    "electron-debug": "^1.1.0",
    "electron-dl": "^1.6.0",
    "fs-jetpack": "^0.12.0",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",

    "electron": "^1.4.7",
    "electron-builder": "^15.1.1",
    "electron-mocha": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.4.3",
    "minimist": "^1.2.0",
    "mocha": "^3.0.2",
    "rollup": "^0.41.6",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.11",
    "spectron": "^3.6.0"
  }
}
